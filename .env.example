# =====================================================
# MERN TASK MANAGEMENT - UNIFIED ENVIRONMENT TEMPLATE
# =====================================================
# Instructions: Copy this file to .env and update all values
# CRITICAL: Change all default values before production deployment!
# This single file works for both backend and frontend
# =====================================================

# ========== SERVER & BACKEND CONFIGURATION ==========
PORT=5000
NODE_ENV=development
HOST=127.0.0.1

# ========== DATABASE CONFIGURATION ==========
# Local MongoDB
MONGODB_URI=mongodb://127.0.0.1:27017/taskmanager_db
MONGODB_USER=taskmanager_admin
MONGODB_PASSWORD=SecurePass123!@#
DB_NAME=taskmanager_db
DB_POOL_SIZE=10
DB_TIMEOUT=5000

# ========== JWT & AUTHENTICATION ==========
JWT_SECRET=your_super_secret_jwt_key_change_in_production_12345_abcde
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_key_12345
JWT_REFRESH_EXPIRE=30d
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_key_change_in_production
SESSION_TIMEOUT=3600000
REFRESH_TOKEN_EXPIRY=30d

# ========== CLIENT & API CONFIGURATION ==========
CLIENT_URL=http://localhost:3000
CLIENT_URL_PROD=https://yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com
REACT_APP_SERVER_URL=http://localhost:5000
REACT_APP_SERVER_URL_PROD=https://api.yourdomain.com

# ========== CORS CONFIGURATION ==========
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true
SOCKET_IO_CORS_ORIGIN=http://localhost:3000
SOCKET_IO_CORS_CREDENTIALS=true

# ========== EMAIL CONFIGURATION ==========
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-gmail@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@taskmanager.com
EMAIL_FROM_NAME=Task Manager

# ========== FILE UPLOAD CONFIGURATION ==========
FILE_UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.xls,.xlsx,.jpg,.jpeg,.png,.gif,.zip,.rar
FILE_UPLOAD_LIMIT=50MB
REACT_APP_MAX_FILE_SIZE=52428800
REACT_APP_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.xls,.xlsx,.jpg,.jpeg,.png,.gif,.zip,.rar

# ========== AWS S3 CONFIGURATION ==========
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=taskmanager-uploads
AWS_S3_PUBLIC_URL=https://taskmanager-uploads.s3.amazonaws.com

# ========== 2FA & SECURITY ==========
2FA_ENABLED=true
2FA_METHOD=totp
TOTP_WINDOW=1
BACKUP_CODES_COUNT=10
LOGIN_ATTEMPT_LIMIT=5
LOGIN_ATTEMPT_WINDOW=15
ACCOUNT_LOCKOUT_TIME=900000
SECURE_HEADERS_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000

# ========== RATE LIMITING ==========
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
AUTH_RATE_LIMIT_WINDOW=3600000

# ========== OAUTH CONFIGURATION ==========
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback
REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:5000/api/auth/github/callback
REACT_APP_GITHUB_CLIENT_ID=your_github_client_id

MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_CALLBACK_URL=http://localhost:5000/api/auth/microsoft/callback
REACT_APP_MICROSOFT_CLIENT_ID=your_microsoft_client_id

# ========== SOCKET.IO CONFIGURATION ==========
SOCKET_IO_PING_INTERVAL=25000
SOCKET_IO_PING_TIMEOUT=5000
REACT_APP_SOCKET_IO_URL=http://localhost:5000
REACT_APP_SOCKET_IO_RECONNECT_DELAY=1000
REACT_APP_SOCKET_IO_RECONNECT_DELAY_MAX=5000

# ========== LOGGING CONFIGURATION ==========
LOG_LEVEL=debug
LOG_FILE=./logs/app.log
LOG_ERROR_FILE=./logs/error.log
LOG_FORMAT=combined
DEBUG=true
VERBOSE_LOGGING=true
REACT_APP_ENABLE_LOGGING=true
REACT_APP_LOG_LEVEL=info

# ========== MONITORING & ERROR TRACKING ==========
SENTRY_ENABLED=false
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_ENVIRONMENT=development
REACT_APP_SENTRY_ENABLED=false
REACT_APP_SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# ========== PAYMENT CONFIGURATION (Optional) ==========
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ========== CACHE CONFIGURATION ==========
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_TTL=3600

# ========== FRONTEND ENVIRONMENT MODE ==========
REACT_APP_ENV=development
REACT_APP_DEBUG=true

# ========== FRONTEND UI CONFIGURATION ==========
REACT_APP_ITEMS_PER_PAGE=10
REACT_APP_MAX_DESCRIPTION_LENGTH=500
REACT_APP_SESSION_TIMEOUT=3600000
REACT_APP_AUTO_SAVE_INTERVAL=30000
REACT_APP_API_TIMEOUT=30000

# ========== FRONTEND THEME CONFIGURATION ==========
REACT_APP_DEFAULT_THEME=light
REACT_APP_ENABLE_THEME_TOGGLE=true

# ========== FEATURE FLAGS (Backend & Frontend) ==========
FEATURE_2FA_ENABLED=true
FEATURE_OAUTH_ENABLED=true
FEATURE_TEAM_COLLABORATION=true
FEATURE_FILE_UPLOAD=true
FEATURE_RECURRING_TASKS=true
FEATURE_TEMPLATES=true
FEATURE_ANALYTICS=true
FEATURE_PWA=true
FEATURE_AI_SUGGESTIONS=true

REACT_APP_FEATURE_2FA=true
REACT_APP_FEATURE_OAUTH=true
REACT_APP_FEATURE_TEAM_COLLABORATION=true
REACT_APP_FEATURE_FILE_UPLOAD=true
REACT_APP_FEATURE_RECURRING_TASKS=true
REACT_APP_FEATURE_TEMPLATES=true
REACT_APP_FEATURE_KANBAN=true
REACT_APP_FEATURE_CALENDAR=true
REACT_APP_FEATURE_ANALYTICS=true
REACT_APP_FEATURE_PWA=true
REACT_APP_FEATURE_AI_SUGGESTIONS=true

# ========== FRONTEND ANALYTICS (Optional) ==========
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_ENABLE_ANALYTICS=false
